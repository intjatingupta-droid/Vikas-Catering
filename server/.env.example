# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret (use a strong random string)
JWT_SECRET=your-secret-key-here

# Server Port
PORT=5000

# Node Environment (development or production)
NODE_ENV=development

# Frontend URL (for CORS) - Add all domains that should access your API
FRONTEND_URL=http://localhost:8080

# Backend URL (for file uploads and API responses)
# Examples:
# BACKEND_URL=https://vikas-catering.onrender.com
# BACKEND_URL=http://localhost:5000
# BACKEND_URL=https://your-custom-backend.com
# Leave empty to auto-detect based on NODE_ENV
BACKEND_URL=
